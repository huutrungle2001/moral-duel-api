# Server Configuration
PORT=8000
HOST=0.0.0.0
NODE_ENV=development
DEBUG=True

# Database
DATABASE_URL=file:./moralduel.db
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Anthropic Claude (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google Gemini (optional)
GOOGLE_API_KEY=your-google-api-key

# Neo Blockchain
NEO_NETWORK=TestNet
NEO_RPC_URL=https://testnet1.neo.org:443
NEO_PLATFORM_PRIVATE_KEY=your-platform-private-key-in-wif-format
NEO_PLATFORM_ADDRESS=your-platform-neo-address
NEO_TOKEN_CONTRACT_HASH=0x0000000000000000000000000000000000000000
NEO_VERDICT_CONTRACT_HASH=0x0000000000000000000000000000000000000000

# Rate Limiting
RATE_LIMIT_AUTH=5
RATE_LIMIT_VOTING=10
RATE_LIMIT_CASE_CREATION=3

# Background Jobs
AI_CASE_GENERATION_INTERVAL_HOURS=12
CASE_CLOSURE_INTERVAL_MINUTES=5
TRANSACTION_MONITOR_INTERVAL_SECONDS=30
LEADERBOARD_UPDATE_INTERVAL_MINUTES=15
BADGE_CHECK_INTERVAL_HOURS=1

# Case Configuration
CASE_DURATION_HOURS=24
MIN_PARTICIPANTS_FOR_CREATOR_REWARD=100

# Reward Distribution (percentages)
REWARD_WINNING_VOTERS_PERCENT=40
REWARD_TOP_ARGUMENTS_PERCENT=30
REWARD_ALL_PARTICIPANTS_PERCENT=20
REWARD_CREATOR_PERCENT=10

# Monitoring
SENTRY_DSN=your-sentry-dsn-url

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
